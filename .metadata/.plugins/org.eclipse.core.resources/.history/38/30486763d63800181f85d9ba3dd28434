package com.gammas.geoc.api;

import java.util.ArrayList;
import java.util.List;

import com.gammas.geoc.api.item.ICrushable;

import net.minecraft.item.Item;

public class ItemLists {
	
	private static final List<Item> CRUSHABLE_ITEMS = new ArrayList<Item>();
	
	public void addCrushableItem(Item item) {
		if (item instanceof ICrushable) {
			CRUSHABLE_ITEMS.add(item);
		}
	}

}
