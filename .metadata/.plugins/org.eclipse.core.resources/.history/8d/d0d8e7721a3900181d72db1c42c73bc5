package com.gammas.geoc.api;

import java.util.ArrayList;
import java.util.List;

import com.gammas.geoc.Main;
import com.gammas.geoc.api.item.ICrushable;

import net.minecraft.item.Item;

public class ItemLists {

	private static final List<Item> CRUSHABLE_ITEMS = new ArrayList<Item>();
	private static final List<Item> PANABLE_ITEMS = new ArrayList<Item>();
	
	public static void addCrushableItem(Item item) {
		if (item instanceof ICrushable) {
			CRUSHABLE_ITEMS.add(item);
			Main.logger.info("Item: " + item.getRegistryName() + " Has been add to the crushable list");
		} else {
			Main.logger.warn("Item tried to be added the crushable list, but does not implement ICrushable!");
		}
	}

}
