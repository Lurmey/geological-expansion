package com.gammas.geoex.items;

import com.gammas.geoc.api.ItemLists;
import com.gammas.geoc.api.item.IPanable;

import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraftforge.fml.common.Optional;

@Optional.Interface(iface = "com.gammas.geoc.api.item.IPanable", modid = "geoc")
public class ItemPanable extends BaseItem implements IPanable {

	private Item panningResult;
	private int panningAmount;
	
	public ItemPanable(String name, Item panningResult, int panningAmount) {
		super(name);
		
		ItemLists.addCrushableItem(this);
		this.panningResult = panningResult;
		this.panningAmount = panningAmount;
	}

	@Optional.Method(modid = "geoc")
	@Override
	public ItemStack getPanningResult() {
		return panningResult;
	}

}
